<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">我的资料</h1>
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <div class="row">
    <div class='col-lg-12'>
      <%= {:error => 'danger', :warning => 'warning', :success => 'success', :notice => 'info'}.map { |type, class_name| flash_tag(type, :class => "alert alert-#{class_name} fade in", :bootstrap => true) }.join.html_safe %>
      <div class="panel panel-default">
          <div class="panel-heading" style='height:55px;line-height:40px;'>
              <%=image_tag @user.photo.thumb.url, :class=>'img-responsive img-circle', :style=>'width:40px;float:left;' %> &nbsp;&nbsp;&nbsp;<%= @user.name %>
          </div>
          <!-- /.panel-heading -->
          <div class="panel-body">
             <form enctype="multipart/form-data" action="/account" class="form-horizontal" method='post'  role="form">
            <fieldset>
                <div class="form-group">
                    <label for="name" class="col-md-2 control-label">姓名</label>
                    <div class="input-group col-md-5">
                        <input id='name' required="required" class="form-control" name='name' value='<%=@user.name%>'>
                        <span class="input-group-addon clear_val"><span class="glyphicon glyphicon-remove"></span></span>
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <div class="form-group">
                    <label for="title" class="col-md-2 control-label">职位</label>
                    <div class="input-group col-md-5">
                        <input id='title' required="required" class="form-control" name='title' value='<%=@user.title%>'>
                        <span class="input-group-addon clear_val"><span class="glyphicon glyphicon-remove"></span></span>
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <div class="form-group">
                    <label for="title" class="col-md-2 control-label">头像</label>
                    <div class="input-group col-md-5">
                      <span class="input-group-btn">
                        <button class="btn btn-default" id='pic_btn' type="button">
                          <span class="glyphicon glyphicon-picture"></span>
                        </button>
                      </span>
                      <input type="text" id='path' class="form-control">
                      <input type='file' id='file' style='display:none;' name='photo' >
                    </div><!-- /input-group -->
                </div>
            </fieldset>
            <fieldset>
                <div class="form-group">
                    <button type="submit" class="btn col-md-offset-2 btn-outline btn-success">提交</button>
                </div>
            </fieldset>
        </form>
          </div>
          <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
    </div>
  </div>
        
</div><!-- /#page-wrapper -->
<script>
$('#pic_btn').on('click',function(){
  $('#file').trigger('click');
})
$('#file').on('change',function(){

  $('#path').val($(this).val());
})
</script>

