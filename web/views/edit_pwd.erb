<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">修改密码</h1>
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <div class="row">
    <div class='col-lg-12'>
      <%= {:error => 'danger', :warning => 'warning', :success => 'success', :notice => 'info'}.map { |type, class_name| flash_tag(type, :class => "alert alert-#{class_name} fade in", :bootstrap => true) }.join.html_safe %>
      <div class="panel panel-default">
          <div class="panel-heading" style='height:55px;line-height:40px;'>
              <%=image_tag @user.photo.thumb.url, :class=>'img-responsive img-circle', :style=>'width:40px;float:left;' %> &nbsp;&nbsp;&nbsp;<%= @user.name %>
          </div>
          <!-- /.panel-heading -->
          <div class="panel-body">
             <form enctype="multipart/form-data" action="" class="form-horizontal" method='post'  role="form">
            <fieldset>
                <div class="form-group">
                    <label for="password" class="col-md-2 control-label">密码</label>
                    <div class="input-group col-md-5">
                        <input type='password' id='password' required="required" class="form-control" name='password' >
                        <span class="input-group-addon clear_val"><span class="glyphicon glyphicon-remove"></span></span>
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <div class="form-group">
                    <label for="new_password" class="col-md-2 control-label">新密码</label>
                    <div class="input-group col-md-5">
                        <input type='password' id='new_password' required="required" class="form-control" name='new_password'>
                        <span class="input-group-addon clear_val"><span class="glyphicon glyphicon-remove"></span></span>
                    </div>
                </div>
            </fieldset>

            <fieldset>
                <div class="form-group">
                    <label for="confirm_password" class="col-md-2 control-label">重复密码</label>
                    <div class="input-group col-md-5">
                        <input type='password' id='confirm_password' required="required" class="form-control" name='confirm_password' >
                        <span class="input-group-addon clear_val"><span class="glyphicon glyphicon-remove"></span></span>
                    </div>
                </div>
            </fieldset>

            <fieldset>
                <div class="form-group">
                    <button type="submit" class="btn col-md-offset-2 btn-outline btn-success">提交</button>
                </div>
            </fieldset>
        </form>
          </div>
          <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
    </div>
  </div>
        
</div><!-- /#page-wrapper -->
<script>
$('#pic_btn').on('click',function(){
  $('#file').trigger('click');
})
$('#file').on('change',function(){

  $('#path').val($(this).val());
})
</script>

